Host *
    AddKeysToAgent yes

Host github.com
    IdentityFile ~/.ssh/id_github
    User git

# generic local virtual machines or other things, ignore their keys
Host localhost 127.0.0.1 ::1
    StrictHostKeyChecking no
    UserKnownHostsFile=/dev/null

# mine
Host router router.lan.sekuraz.net router-1 router-1.lan.sekuraz.net
    HostName 192.168.0.3
    User root
    IdentityFile ~/Code/homelab/id_rsa_openwrt

Host 192.168.0.*
    IdentityFile ~/Code/homelab/id_ed25519

Host 192.168.1.*
    IdentityFile ~/Code/homelab/id_ed25519

#symovo
Host *.symovo.org
    UseKeychain yes
    IdentityFile ~/.ssh/symovo

Host gitlab-ci-*.symovo.org
    User markus
    Identityfile ~/.ssh/id_rsa_symovo
